<% html_title(t(:label_administration), t('ldap_groups.synchronized_filters.add_new')) -%>

<%=
  render Primer::OpenProject::PageHeader.new do |header|
    header.with_title { t("ldap_groups.synchronized_filters.add_new") }
    header.with_breadcrumbs([{ href: admin_index_path, text: t(:label_administration) },
                             { href: admin_settings_authentication_path, text: t(:label_authentication) },
                             { href: ldap_groups_synchronized_groups_path, text: I18n.t("ldap_groups.label_menu_item") },
                             t("ldap_groups.synchronized_filters.add_new")])
  end
%>


<%= labelled_tabular_form_for @filter,
                              as: :synchronized_filter,
                              url: { action: :create } do |f| %>

  <%= render partial: 'form', locals: { f: f } %>

  <p>
    <%= styled_button_tag t(:button_create), class: '-primary -with-icon icon-checkmark' %>
    <%= link_to t(:button_cancel), ldap_groups_synchronized_groups_path, class: 'button -with-icon icon-cancel' %>
  </p>
<% end %>
