<% html_title t(:label_my_account), t(:label_avatar) %>

<%=
  render(Primer::OpenProject::PageHeader.new) do |header|
    header.with_title { t(:label_avatar) }
    header.with_breadcrumbs([{ href: my_account_path, text: t(:label_my_account) },
                             t(:label_avatar)])
  end
%>

<% @manager = ::OpenProject::Avatars::AvatarManager %>
<% @target_avatar_path = edit_my_avatar_path %>
<%= form_tag(edit_my_avatar_path, method: :put, name: 'avatar_form', multipart: true) do %>
    <%= render partial: 'avatars/users/avatar' %>
<% end %>
